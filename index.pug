        //- Temp
        div.temp
            select#speaker-t
                option(value="circle-speaker") circle 
                option(value="square-speaker") square
            div
                label(for="small-s") Small Speaker
                input(type="checkbox", name="")#small-s
        
            div
                label(for="handle-e") Handle
                input(type="checkbox", name="")#handle-e

            div
                label(for="antenna-l") Antenna left
                input(type="checkbox", name="")#antenna-l

            div
                label(for="antenna-r") Antenna right
                input(type="checkbox", name="")#antenna-r
        //----------
        div.boombox.flex#boombox
            div.shadow
                div.shadow-a
                div.shadow-b 
                div.shadow-c.handle-e
                div.shadow-d.antenna-l
                div.shadow-e.antenna-r
            //----------
            div.base
                div.base__front.face 
                div.base__back.face 
                div.base__right.face 
                div.base__left.face 
                div.base__top.face 
                    //----------
                    div.b-base
                        div.b-base__front.face 
                            div.tuner.flex
                                div.tuner__line
                                div.tuner__current
                        div.b-base__back.face 
                        div.b-base__right.face 
                        div.b-base__left.face 
                        div.b-base__top.face.flex 
                            //- Antenna
                            div.circle.flex.circle--al.antenna-l
                                div.circle-d  
                                    - var n = 0
                                    while n < 10
                                        div.circle-d__side
                                        - n++
                            //- Antenna
                            div.circle.flex.circle--ar.antenna-r
                                div.circle-d  
                                    - var n = 0
                                    while n < 10
                                        div.circle-d__side
                                        - n++
                            //- Handle
                            div.handle.handle-e
                                div.handle__shadow
                                div.handle-l
                                    div.handle-l__front.face 
                                    div.handle-l__back.face 
                                    div.handle-l__right.face 
                                    div.handle-l__left.face 
                                    div.handle-l__top.face.flex 
                                    div.handle-l__bottom.face 
                                div.handle-r
                                    div.handle-r__front.face 
                                    div.handle-r__back.face 
                                    div.handle-r__right.face 
                                    div.handle-r__left.face 
                                    div.handle-r__top.face 
                                    div.handle-r__bottom.face
                                div.handle-t
                                    div.handle-t__front.face 
                                    div.handle-t__back.face 
                                    div.handle-t__right.face 
                                    div.handle-t__left.face 
                                    div.handle-t__top.face
                                    div.handle-t__bottom.face 
                        div.b-base__bottom.face 
                    div.f-base
                        div.f-base__front.face 
                            div.visualizer
                                - var n = 0
                                while n < 12
                                    div.visualizer__line.opt
                                    - n++
                            //- Big-speaker section
                            div.circle.flex.circle--left.circle-speaker
                                div.circle-a  
                                    - var n = 0
                                    while n < 36
                                        div.circle-a__side
                                        - n++
                                    div.circle-a__top
                                    div.circle-a__bottom
                                //- div.circle-b  
                                    - var m = 0
                                    while m < 36
                                        div.circle-b__side
                                        - m++
                            div.square.circle.circle--left.square-speaker.s
                                div.square__front.face 
                                div.square__back.face 
                                div.square__right.face 
                                div.square__left.face 
                                div.square__top.face
                                div.square__bottom.face 
                            //- Big-speaker section
                            div.circle.flex.circle--right.circle-speaker
                                div.circle-a  
                                    - var n = 0
                                    while n < 36
                                        div.circle-a__side
                                        - n++
                                    div.circle-a__top
                                    div.circle-a__bottom
                                //- div.circle-b  
                                    - var m = 0
                                    while m < 36
                                        div.circle-b__side
                                        - m++
                            div.square.circle.circle--right.square-speaker.s
                                div.square__front.face 
                                div.square__back.face 
                                div.square__right.face 
                                div.square__left.face 
                                div.square__top.face
                                div.square__bottom.face 
                            //- Small speaker
                            div.circle.flex.circle--top-left.small-speakers
                                div.circle-c  
                                    - var n = 0
                                    while n < 36
                                        div.circle-c__side
                                        - n++
                                    div.circle-c__top
                                    div.circle-c__bottom
                            //- Small speaker
                            div.circle.flex.circle--top-right.small-speakers
                                div.circle-c  
                                    - var n = 0
                                    while n < 36
                                        div.circle-c__side
                                        - n++
                                    div.circle-c__top
                                    div.circle-c__bottom
                            //-------------------------
                            div.cassette
                            //- Buttons front
                            div.f-buttons.f-buttons--front
                                - var n = 0
                                while n < 5
                                    div.button
                                        div.button__front.face 
                                        div.button__back.face 
                                        div.button__right.face 
                                        div.button__left.face 
                                        div.button__top.face
                                        div.button__bottom.face 
                                    - n++
                        div.f-base__back.face 
                        div.f-base__right.face 
                        div.f-base__left.face 
                        div.f-base__top.face
                            div.controls-g 
                                //- Controls left side
                                div.controls.controls-l
                                    - var n = 0
                                    while n < 5
                                        div.controls__s
                                            div.control
                                                div.control__front.face 
                                                div.control__back.face 
                                                div.control__right.face 
                                                div.control__left.face 
                                                div.control__top.face
                                                div.control__bottom.face 
                                        - n++
                                //- Controls right side
                                div.controls.controls-r
                                    - var n = 0
                                    while n < 5
                                        div.controls__s
                                            div.control
                                                div.control__front.face 
                                                div.control__back.face 
                                                div.control__right.face 
                                                div.control__left.face 
                                                div.control__top.face
                                                div.control__bottom.face 
                                        - n++
                            //- Buttons top
                            div.f-buttons.f-buttons--top
                                - var n = 0
                                while n < 5
                                    div.button
                                        div.button__front.face 
                                        div.button__back.face 
                                        div.button__right.face 
                                        div.button__left.face 
                                        div.button__top.face
                                        div.button__bottom.face 
                                    - n++
                        div.f-base__bottom.face 
                div.base__bottom.face 


